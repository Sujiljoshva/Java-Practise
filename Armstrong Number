import java.lang.*;
import java.util.*;
class CountDisplayDigits{
    public static void main(String[] args) {
      Scanner sc=new Scanner(System.in);
      System.out.println("Enter a number to display its digits: ");
      int n=sc.nextInt();
      int m = n;// holding the value of n in m to check after the loop execution
      
     int z=0;
      while(n>0){
          int r=(n%10);
          n=n/10;
          z=z+(r*r*r);
          System.out.println("The Armstrong number  "+r);
          
      }
      if(z==m){
          System.out.println("The Given number "+m+" is  an Armstrong Number :");
      }
      else{
          System.out.println("The Given number "+m+" is not an Armstrong Number :");
      }
    }
}
