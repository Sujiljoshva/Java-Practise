import java.lang.*;
import java.util.*;
class ReverseNumber{
    public static void main(String[] args) {
      Scanner sc=new Scanner(System.in);
      System.out.println("Enter a number to display its digits: ");
      int n=sc.nextInt();
      int m=n;
      
      int rev=0;
      while(n>0){
          int r=(n%10);
          n=n/10;
          rev=rev*10+r;
      }
      System.out.println("The reversed number of "+m+" is "+rev);
      
    }
}
