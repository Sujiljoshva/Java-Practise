import java.lang.*;
import java.util.*;

class FactorialOfn{
    public static void main(String[] args) {
    Scanner sc=new Scanner(System.in);
    System.out.println("Enter a number to obatian its factorial! :");
    int n=sc.nextInt();
     int fact=1;
    
    for(int i =1;i<=n;i++)
    {
        fact =fact*i;
        System.out.println("The number "+i+" has its factorial "+fact);
    
    }
    System.out.println("The factorial is "+fact);
}
}    
